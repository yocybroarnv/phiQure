{
  "name": "ai-persona-wrapper",
  "version": "1.0.0",
  "description": "Production-grade AI assistant wrapper with persistent personality and multi-language support",
  "main": "dist/typescript/index.js",
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "lint": "eslint src/typescript/**/*.ts",
    "start": "node dist/typescript/index.js",
    "dev": "ts-node-dev --respawn src/typescript/index.ts",
    "security-check": "npm audit && snyk test",
    "docker-build": "docker-compose build",
    "docker-up": "docker-compose up",
    "prepare": "husky install"
  },
  "dependencies": {
    "openai": "^4.0.0",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "zod": "^3.22.2",
    "winston": "^3.10.0",
    "tiktoken": "^1.0.7"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.4",
    "@types/node": "^20.5.7",
    "@typescript-eslint/eslint-plugin": "^6.5.0",
    "@typescript-eslint/parser": "^6.5.0",
    "eslint": "^8.48.0",
    "husky": "^8.0.3",
    "jest": "^29.6.4",
    "prettier": "^3.0.3",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.2",
    "snyk": "^1.1206.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}